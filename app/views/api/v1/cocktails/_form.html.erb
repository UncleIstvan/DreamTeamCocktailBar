<div class="panel panel-default">
  <div class="panel-heading">
    <%= form_field_text(f, :name) %>
  </div>
</div>

<div class ='field form-group'>
  <%= f.label :description, class: "col-md-2 control-label"%>
  <div class="col-sm-10">
    <%= f.text_area :description, class: "form-control", rows: 5%>
  </div>


</div>




<div class ='field form-group'>
  <%= f.label :image, class: 'col-md-2 control-label' %>
  <div class="col-sm-3">
    <%= f.file_field :image, multiple: false %>

  </div>

  <% if @cocktail.image? %>

      <div class="field form-group">
        <div class = 'col-md-2 control-label'></div>
        <div class = 'col-sm-5'><%= f.check_box :remove_image%> Remove avatar</div>

      </div>
      <div class="field form-group">
        <div class="col-md-2 control-label"></div>
        <div class="col-md-10"><%= image_tag(@cocktail.image_url, size: '380', class: "img-thumbnail")%></div>
      </div>
  <% end %>

</div>




<div class="panel panel-default">

  <div class="panel-body">

    <legend><%= :ingredients %></legend>
    <%= f.fields_for :ingredients do |ingredient_form| %>

          <div class="form-group row">
            <%= text_value_cell(ingredient_form)%>
            <%= form_field_row_collection_select(ingredient_form, :product, :product_id, Product.all, :id, :combined_name,{ :prompt => true }) %>
          </div>



    <% end %>
    <div class="actions form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit 'Save' %>
      </div>
    </div>

    <div class="pull-left"> Image placeholder</div>
  </div>
</div>