<h1>Hi</h1>
<% if @products.empty? %>
    <h2>Search is empty</h2>
<%else%>
    <h2>Search result:</h2>
    <table>
      <tr>
        <th>Id</th>
        <th>Product Name</th>
        <th>Cost Price</th>
        <th>Min Value</th>
        <th>Type</th>
        <th>Edit</th>
        <th>Remove</th>
      </tr>
      <% @products.each do |product| %>
          <tr>
            <td> <%=product.id %></td>
            <td> <%=product.name %></td>
            <td> <%=product.cost_price %></td>
            <td> <%=product.min_value %></td>
            <td> <%=product.product_type %></td>
          </tr>
      <%end%>

    </table>
<%end%>