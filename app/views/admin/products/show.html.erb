<div class="page-header">
  <h1>  <%= @product.name %>
    <small> <%= @product.min_value %> ml</small>
    <div class="btn-group right"  role="group">
      <%= link_to "<span class=\"glyphicon glyphicon-arrow-left\"></span> Go back to products".html_safe, admin_products_path %>
      <%= link_to "<span class=\"glyphicon glyphicon-plus\"></span> Add new product".html_safe, controller: 'admin/products', action: :new %>
      <%= link_to "<span class=\"glyphicon glyphicon-pencil\"></span>".html_safe, edit_admin_product_path(@product) %>
      <%= link_to "<span class=\"glyphicon glyphicon-trash\"></span>".html_safe, admin_product_path(@product), method: :delete, data: {confirm: 'Are you sure'} %>
      <%= link_to "<span class=\"glyphicon glyphicon-glass\"></span> Create new cocktail with this product".html_safe, controller: 'admin/cocktails', action: :new, :product_id => @product.id %>
    </div>
  </h1>
</div>

<div class=" body_panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-6">
        <%= image_tag(@product.image_url, size: '350', class: 'img-thumbnail') %>
      </div>
      <br class="visible-xs-block visible-sm-block">

      <div class="col-md-6">
        <div class="panel panel-info">
          <div class="panel-heading">
            <div class="panel-title">Details</div>
          </div>
          <ul class="list-group">
            <li class="list-group-item"><%= "ID: #{@product.id}" %></li>
            <li class="list-group-item"><%= "Name: #{@product.name}" %></li>
            <li class="list-group-item"><%= "Min value: #{@product.min_value} ml" %></li>
            <li class="list-group-item"><%= "Cost price: #{@product.price} $" %></li>
            <li class="list-group-item"><%= "Type: #{@product.product_type}" %></li>
          </ul>
        </div>
      </div>


    </div>
  </div>
</div>
